<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/grey_shadow_background"/>
        </shape>
    </item>
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="#006ec7"/>
            <stroke
                android:width="4dp"
                android:color="#ffffff"/>
            <size
                android:height="20dp"
                android:width="20dp"/>
        </shape>
    </item>
</layer-list>
