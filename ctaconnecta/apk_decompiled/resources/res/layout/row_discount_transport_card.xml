<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_cta_detail_card">
    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/tvProfile"
        android:background="@color/grey_background_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.35"
        style="@style/TextViewLight"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tvDiscount"
        android:background="@color/grey_background_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_cta_detail_card"
        app:layout_constraintBottom_toBottomOf="@+id/tvProfile"
        app:layout_constraintStart_toEndOf="@+id/tvProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.15"
        style="@style/TextViewLight"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tvValidUntil"
        android:background="@color/grey_background_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_cta_detail_card"
        app:layout_constraintBottom_toBottomOf="@+id/tvProfile"
        app:layout_constraintStart_toEndOf="@+id/tvDiscount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.35"
        style="@style/TextViewLight"/>
</androidx.constraintlayout.widget.ConstraintLayout>
