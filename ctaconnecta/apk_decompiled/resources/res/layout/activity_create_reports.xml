<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbar"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/tvErrorMessage"
        android:background="@color/text_color_red"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"/>
    <TextView
        android:id="@+id/tvLabelReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="@string/label_create_report_card"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvErrorMessage"
        style="@style/TextViewLight"/>
    <TextView
        android:id="@+id/tvDateSince"
        android:background="@drawable/shape_text_grey"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:hint="@string/label_hint_date"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_calendar"
        android:paddingStart="@dimen/spacing_tiny"
        android:layout_marginStart="@dimen/spacing_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelReport"
        app:layout_constraintWidth_percent="0.4"
        style="@style/TextView"/>
    <TextView
        android:textSize="@dimen/font_cta_user_huge"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:id="@+id/tvSeparator"
        android:padding="@dimen/spacing_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/tvDateSince"
        app:layout_constraintEnd_toStartOf="@+id/tvDateTo"
        app:layout_constraintStart_toEndOf="@+id/tvDateSince"
        app:layout_constraintTop_toTopOf="@+id/tvDateSince"
        style="@style/TextView"/>
    <TextView
        android:id="@+id/tvDateTo"
        android:background="@drawable/shape_text_grey"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:hint="@string/label_hint_date"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_calendar"
        android:paddingStart="@dimen/spacing_tiny"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelReport"
        app:layout_constraintWidth_percent="0.4"
        style="@style/TextView"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbRechargeTrips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_normal"
        android:text="@string/label_generate_report"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Button.ButtonYellow"/>
</androidx.constraintlayout.widget.ConstraintLayout>
