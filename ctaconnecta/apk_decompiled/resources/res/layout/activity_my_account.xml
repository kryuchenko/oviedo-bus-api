<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbar"/>
    <TextView
        android:id="@+id/tvAdvice"
        android:background="@color/colorAccent"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        style="@style/TextView.Advice"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/btSave"
        app:layout_constraintTop_toBottomOf="@+id/tvAdvice">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/vMain"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvDateBirth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/font_cta_name"
                android:textColor="@color/grey_background_card"
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue_regular"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivProfile"
                app:layout_constraintTop_toTopOf="@+id/ivProfile"
                style="@style/TextView"/>
            <TextView
                android:textColor="@color/grey_background_card"
                android:id="@+id/tvLabelIdentityDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_smaller"
                android:text="@string/label_identity_document"
                android:fontFamily="@font/helveticaneue_light"
                android:paddingEnd="@dimen/spacing_small"
                app:layout_constraintStart_toStartOf="@+id/tvName"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                style="@style/TextView"/>
            <TextView
                android:textColor="@color/grey_background_card"
                android:id="@+id/tvIdentityDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/spacing_normal"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvLabelIdentityDocument"
                app:layout_constraintStart_toEndOf="@+id/tvLabelIdentityDocument"
                style="@style/TextView"/>
            <TextView
                android:textColor="@color/grey_background_card"
                android:id="@+id/tvLabelDateBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_date_birth"
                android:fontFamily="@font/helveticaneue_light"
                android:paddingEnd="@dimen/spacing_small"
                app:layout_constraintStart_toStartOf="@+id/tvLabelIdentityDocument"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelIdentityDocument"
                style="@style/TextView"/>
            <TextView
                android:textColor="@color/grey_background_card"
                android:id="@+id/tvDateBirth"
                android:paddingBottom="@dimen/spacing_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/spacing_normal"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvLabelDateBirth"
                app:layout_constraintStart_toEndOf="@+id/tvLabelDateBirth"
                style="@style/TextView"/>
            <TextView
                android:id="@+id/tvLabelMail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:text="@string/label_user_email"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="@+id/etMail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vMain"
                style="@style/TextViewLight"/>
            <EditText
                android:id="@+id/etMail"
                android:background="@drawable/shape_text_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:inputType="textEmailAddress"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:autofillHints=""
                android:importantForAutofill="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvLabelMail"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelMail"
                style="@style/TextView.EditText"/>
            <TextView
                android:id="@+id/tvLabelMailConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/label_user_email_confirm"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="@+id/etMailConfirm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelMail"
                style="@style/TextViewLight"/>
            <EditText
                android:id="@+id/etMailConfirm"
                android:background="@drawable/shape_text_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:inputType="textEmailAddress"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:autofillHints=""
                android:importantForAutofill="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvLabelMailConfirm"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelMailConfirm"
                style="@style/TextView.EditText"/>
            <TextView
                android:id="@+id/tvLabelPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:text="@string/label_user_mobile_phone"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="@+id/etMailConfirm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etMailConfirm"
                style="@style/TextViewLight"/>
            <EditText
                android:id="@+id/etPhone"
                android:background="@drawable/shape_text_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:inputType="phone"
                android:layout_marginEnd="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvLabelMail"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelPhone"
                style="@style/TextView.EditText"/>
            <TextView
                android:id="@+id/tvLabelSecondPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:text="@string/label_user_phone_home_optional"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="@+id/etMail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPhone"
                style="@style/TextViewLight"/>
            <EditText
                android:id="@+id/etSecondPhone"
                android:background="@drawable/shape_text_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:inputType="phone"
                android:layout_marginEnd="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvLabelMail"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelSecondPhone"
                style="@style/TextView.EditText"/>
            <TextView
                android:id="@+id/tvTitleShippingData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="@string/label_user_direction"
                android:fontFamily="@font/helveticaneue_bold"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="@+id/etMail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etSecondPhone"
                style="@style/TextViewBold"/>
            <TextView
                android:id="@+id/tvLabelName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="@string/label_user_domicilio"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="@+id/etMail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleShippingData"
                style="@style/TextViewLight"/>
            <EditText
                android:id="@+id/etDirection"
                android:background="@drawable/shape_text_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:inputType="text"
                android:layout_marginEnd="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvLabelMail"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelName"
                style="@style/TextView.EditText"/>
            <TextView
                android:id="@+id/tvLabelPostalCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:text="@string/label_user_postal_code"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="@+id/etMail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etDirection"
                style="@style/TextViewLight"/>
            <EditText
                android:id="@+id/etPostalCode"
                android:background="@drawable/shape_text_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:inputType="number"
                android:layout_marginEnd="@dimen/spacing_normal"
                app:layout_constraintStart_toStartOf="@+id/tvLabelMail"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelPostalCode"
                app:layout_constraintWidth_percent="0.3"
                style="@style/TextView.EditText"/>
            <TextView
                android:id="@+id/tvLabelLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:text="@string/label_user_locality"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="@+id/etMail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPostalCode"
                style="@style/TextViewLight"/>
            <EditText
                android:id="@+id/etLocation"
                android:background="@drawable/shape_text_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:inputType="text"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                app:layout_constraintStart_toStartOf="@+id/tvLabelMail"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelLocation"
                style="@style/TextView.EditText"/>
            <TextView
                android:id="@+id/tvLabelProvince"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:text="@string/label_user_province"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="@+id/etMail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etLocation"
                style="@style/TextViewLight"/>
            <EditText
                android:id="@+id/etProvince"
                android:background="@drawable/shape_text_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:inputType="text"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                app:layout_constraintStart_toStartOf="@+id/tvLabelMail"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelProvince"
                style="@style/TextView.EditText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="@string/label_save"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Button.ButtonYellow"/>
</androidx.constraintlayout.widget.ConstraintLayout>
