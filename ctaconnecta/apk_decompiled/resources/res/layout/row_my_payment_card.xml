<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivCard"
        android:background="@drawable/ic_credit_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:layout_marginBottom="@dimen/spacing_tiny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/ivBranchCard"
        android:background="@drawable/ic_master_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        app:layout_constraintStart_toStartOf="@+id/ivCard"
        app:layout_constraintTop_toTopOf="@+id/ivCard"/>
    <TextView
        android:textSize="@dimen/font_larger"
        android:textColor="@color/text_color"
        android:id="@+id/tvNumberCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:fontFamily="@font/helvetica_neue_regular"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tvDateExpired"
        app:layout_constraintStart_toStartOf="@+id/ivCard"
        style="@style/TextViewStyle.TextViewStyleRegular"/>
    <TextView
        android:textSize="@dimen/font_large"
        android:textColor="@color/text_color"
        android:id="@+id/tvDateExpired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large"
        android:fontFamily="@font/helveticaneue_light"
        android:layout_marginStart="@dimen/spacing_large"
        app:layout_constraintBottom_toBottomOf="@+id/ivCard"
        app:layout_constraintStart_toStartOf="@+id/ivCard"
        style="@style/TextViewStyle.TextViewStyleRegular"/>
    <TextView
        android:textSize="@dimen/font_normal"
        android:textColor="@color/text_color"
        android:id="@+id/tvDefault"
        android:background="@color/green_toogle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="@string/label_by_default"
        android:textAllCaps="false"
        android:fontFamily="@font/helveticaneue_light"
        android:paddingStart="@dimen/spacing_tiny"
        android:paddingEnd="@dimen/spacing_tiny"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintEnd_toEndOf="@+id/ivCard"
        app:layout_constraintTop_toTopOf="@+id/ivCard"
        style="@style/TextViewStyle.TextViewStyleRegular"/>
    <com.google.android.material.button.MaterialButton
        android:textSize="@dimen/font_normal"
        android:id="@+id/mbDefault"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_smaller"
        android:text="@string/label_set_default_card"
        android:textAllCaps="false"
        android:textAlignment="textEnd"
        android:paddingStart="@dimen/spacing_large"
        android:paddingEnd="@dimen/spacing_normal"
        android:letterSpacing="0.01"
        app:layout_constraintEnd_toEndOf="@+id/ivCard"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/ivBranchCard"
        app:layout_constraintTop_toTopOf="@+id/ivCard"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
