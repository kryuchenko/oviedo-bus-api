<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbar"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/tvErrorMessage"
        android:background="@color/text_color_red"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:paddingStart="@dimen/spacing_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"/>
    <TextView
        android:id="@+id/tvLabelMail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_huge"
        android:text="@string/label_user_dni"
        android:layout_marginStart="@dimen/spacing_large"
        app:layout_constraintEnd_toEndOf="@+id/tilUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvErrorMessage"
        style="@style/TextViewLight"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:layout_marginEnd="@dimen/spacing_large"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvLabelMail"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelMail">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUsername"
            android:background="@drawable/shape_text_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/spacing_normal"
            android:inputType="text"
            android:drawableStart="@drawable/ic_login_card"
            style="@style/TextView.EditText"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tvLabelPwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_larger"
        android:text="@string/label_user_password"
        app:layout_constraintEnd_toStartOf="@+id/mbForgotPwd"
        app:layout_constraintStart_toStartOf="@+id/tvLabelMail"
        app:layout_constraintTop_toBottomOf="@+id/tilUsername"
        style="@style/TextViewLight"/>
    <com.google.android.material.button.MaterialButton
        android:textSize="@dimen/font_normal"
        android:gravity="bottom"
        android:id="@+id/mbForgotPwd"
        android:padding="@dimen/spacing_tiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_my_pwd"
        app:layout_constraintBottom_toTopOf="@+id/tilPwd"
        app:layout_constraintEnd_toEndOf="@+id/tilUsername"
        style="@style/Button.Transparent"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintEnd_toEndOf="@+id/tilUsername"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/tvLabelMail"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelPwd"
        app:passwordToggleEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPwd"
            android:background="@drawable/shape_text_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/spacing_normal"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_login_padlock"
            style="@style/TextView.EditText"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/label_access_account"
        android:fontFamily="@font/helveticaneue_medium"
        app:layout_constraintBottom_toTopOf="@+id/mbLoginPrint"
        app:layout_constraintEnd_toEndOf="@+id/tilUsername"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/tvLabelMail"
        style="@style/Button.ButtonYellow"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbLoginPrint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="@string/label_biometric_login_title"
        android:drawableLeft="@drawable/ic_fingerprint"
        android:drawableTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tilUsername"
        app:layout_constraintStart_toStartOf="@+id/btLogin"
        style="@style/Button.Transparent"/>
    <TextView
        android:textSize="@dimen/font_large"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_huge"
        android:text="@string/only_for_pass_users"
        android:fontFamily="@font/helvetica_neue_regular"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilPwd"/>
</androidx.constraintlayout.widget.ConstraintLayout>
