<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btLabelNews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_huge"
        android:text="@string/label_news"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:cornerRadius="@dimen/spacing_tiny"
        app:layout_constraintBottom_toTopOf="@+id/btLabelPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Button.ButtonBlue"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btLabelPrice"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:text="@string/label_price"
        app:cornerRadius="@dimen/spacing_tiny"
        app:layout_constraintEnd_toEndOf="@+id/btLabelNews"
        app:layout_constraintStart_toStartOf="@+id/btLabelNews"
        app:layout_constraintTop_toBottomOf="@+id/btLabelNews"
        style="@style/Button.ButtonBlue"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btLabelSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:text="@string/label_settings"
        app:cornerRadius="@dimen/spacing_tiny"
        app:layout_constraintEnd_toEndOf="@+id/btLabelNews"
        app:layout_constraintStart_toStartOf="@+id/btLabelNews"
        app:layout_constraintTop_toBottomOf="@+id/btLabelPrice"
        style="@style/Button.ButtonBlue"/>
</androidx.constraintlayout.widget.ConstraintLayout>
