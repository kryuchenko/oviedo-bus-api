<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/MyDatePickerDialogTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <CheckedTextView
        android:textSize="@dimen/font_normal"
        android:id="@+id/tvTimeDeparture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/label_departure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        style="@style/ToogleButtonWay"/>
    <CheckedTextView
        android:textSize="@dimen/font_normal"
        android:id="@+id/tvTimeArrival"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/label_arrival"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        style="@style/ToogleButtonWay"/>
    <DatePicker
        android:id="@+id/dpContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeArrival"/>
    <TimePicker
        android:id="@+id/tpContainer"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeArrival"/>
    <com.google.android.material.button.MaterialButton
        android:textSize="@dimen/font_normal"
        android:id="@+id/btCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/label_cancel"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btSave"
        app:layout_constraintTop_toBottomOf="@+id/dpContainer"
        style="@style/Button.Transparent"/>
    <com.google.android.material.button.MaterialButton
        android:textSize="@dimen/font_normal"
        android:id="@+id/btSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/label_next"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Button.Transparent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
