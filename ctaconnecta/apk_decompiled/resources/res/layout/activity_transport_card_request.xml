<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbar"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btNewCardRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_huge"
        android:text="@string/label_card_request_new"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:cornerRadius="@dimen/spacing_tiny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        style="@style/Button.ButtonBlue"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btNewRepresentativeRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:text="@string/label_legal_representative_request_new"
        app:cornerRadius="@dimen/spacing_tiny"
        app:layout_constraintEnd_toEndOf="@+id/btNewCardRequest"
        app:layout_constraintStart_toStartOf="@+id/btNewCardRequest"
        app:layout_constraintTop_toBottomOf="@+id/btNewCardRequest"
        style="@style/Button.ButtonBlue"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btContinueCardRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:text="@string/label_card_request_continue"
        app:cornerRadius="@dimen/spacing_tiny"
        app:layout_constraintEnd_toEndOf="@+id/btNewRepresentativeRequest"
        app:layout_constraintStart_toStartOf="@+id/btNewRepresentativeRequest"
        app:layout_constraintTop_toBottomOf="@+id/btNewRepresentativeRequest"
        style="@style/Button.ButtonBlue"/>
</androidx.constraintlayout.widget.ConstraintLayout>
