<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivResume"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:paddingEnd="@dimen/spacing_tiny"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tvResume"
        android:padding="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_light"
        app:layout_constraintBottom_toBottomOf="@+id/ivResume"
        app:layout_constraintStart_toEndOf="@+id/ivResume"
        app:layout_constraintTop_toTopOf="@+id/ivResume"/>
    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_end"
        android:paddingStart="@dimen/spacing_tiny"
        android:paddingEnd="@dimen/spacing_tiny"
        app:layout_constraintBottom_toBottomOf="@+id/ivResume"
        app:layout_constraintStart_toEndOf="@+id/tvResume"
        app:layout_constraintTop_toTopOf="@+id/ivResume"/>
</androidx.constraintlayout.widget.ConstraintLayout>
