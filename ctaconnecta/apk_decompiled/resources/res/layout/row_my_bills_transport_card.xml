<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvTitleBilling"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneue_medium"
        android:layout_marginEnd="@dimen/spacing_small"
        app:layout_constraintBottom_toTopOf="@+id/tvPriceBilling"
        app:layout_constraintEnd_toStartOf="@+id/tvPriceBilling"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextViewStyle.TextViewStyleRegular"/>
    <TextView
        android:id="@+id/tvPriceBilling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneue_medium"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleBilling"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTitleBilling"
        app:layout_constraintTop_toTopOf="@+id/tvTitleBilling"
        style="@style/TextViewStyle.TextViewStyleRegular"/>
    <TextView
        android:id="@+id/tvDescriptionBilling"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:fontFamily="@font/helvetica_light"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleBilling"
        app:layout_constraintStart_toStartOf="@+id/tvTitleBilling"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleBilling"/>
</androidx.constraintlayout.widget.ConstraintLayout>
