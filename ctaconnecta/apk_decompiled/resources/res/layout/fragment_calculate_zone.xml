<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvLabelOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_origin"
        android:layout_marginStart="@dimen/spacing_normal"
        app:layout_constraintBottom_toBottomOf="@+id/tilOrigin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tilOrigin"
        style="@style/TextViewLight"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilOrigin"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:dropDownWidth="200dp"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLabelDestination"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:gravity="center_vertical"
            android:id="@+id/actvOrigin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/helvetica_neue_regular"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tvLabelDestination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_destination"
        android:layout_marginStart="@dimen/spacing_normal"
        app:layout_constraintBottom_toBottomOf="@+id/tilDestination"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tilDestination"
        style="@style/TextViewLight"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDestination"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:dropDownWidth="200dp"
        android:fontFamily="@font/helveticaneue_medium"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLabelDestination"
        app:layout_constraintTop_toBottomOf="@+id/tilOrigin"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:gravity="center_vertical"
            android:id="@+id/actvDestination"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/helvetica_neue_regular"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="@string/label_calculate"
        android:textAllCaps="false"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilDestination"
        style="@style/Button.Transparent"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/gpCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tvOriginDestiny,tvLabelZones,tvZones,tvPrice"/>
    <TextView
        android:textSize="17sp"
        android:id="@+id/tvOriginDestiny"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:fontFamily="@font/helveticaneue_light"
        app:layout_constraintBottom_toTopOf="@+id/tvLabelZones"
        app:layout_constraintStart_toStartOf="@+id/tvLabelZones"
        app:layout_constraintVertical_bias="1"/>
    <TextView
        android:id="@+id/tvLabelZones"
        android:background="@drawable/zones_selector_green"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintBottom_toTopOf="@+id/tvWarningZones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textColor="@color/text_color"
        android:id="@+id/tvZones"
        android:paddingBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneue_medium"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingEnd="@dimen/spacing_normal"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelZones"
        app:layout_constraintStart_toStartOf="@+id/tvLabelZones"
        app:layout_constraintTop_toTopOf="@+id/tvLabelZones"
        style="@style/TextView"/>
    <TextView
        android:textSize="25sp"
        android:textColor="@color/text_color"
        android:id="@+id/tvPrice"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingEnd="@dimen/spacing_normal"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelZones"
        app:layout_constraintEnd_toEndOf="@+id/tvLabelZones"
        app:layout_constraintTop_toTopOf="@+id/tvLabelZones"
        style="@style/TextView"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/tvWarningZones"
        android:background="@color/text_color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingEnd="@dimen/spacing_normal"
        app:layout_constraintBottom_toTopOf="@+id/btNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/TextView.Advice"/>
    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        android:id="@+id/btNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_normal"
        android:text="@string/label_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Button.ButtonYellow"/>
</androidx.constraintlayout.widget.ConstraintLayout>
