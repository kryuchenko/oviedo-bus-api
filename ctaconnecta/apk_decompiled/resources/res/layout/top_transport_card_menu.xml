<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@drawable/selector_text_transport_card_menu"
        android:gravity="center"
        android:id="@+id/tvInfoTransportCardAction"
        android:background="@drawable/selector_background_menu_transport_card"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_label_last_movements_transport_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvRechargeTransportCardAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextView"/>
    <TextView
        android:textColor="@drawable/selector_text_transport_card_menu"
        android:gravity="center"
        android:id="@+id/tvRechargeTransportCardAction"
        android:background="@drawable/selector_background_menu_transport_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/title_toolbar_details_transport_card"
        app:layout_constraintBottom_toBottomOf="@+id/tvInfoTransportCardAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvInfoTransportCardAction"
        app:layout_constraintTop_toTopOf="@+id/tvInfoTransportCardAction"
        style="@style/TextView"/>
</androidx.constraintlayout.widget.ConstraintLayout>
