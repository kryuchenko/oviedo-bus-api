<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="@color/white"
        android:id="@+id/tvErrorMessage"
        android:background="@color/text_color_red"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="16sp"
        android:id="@+id/tvOrigin"
        android:background="@drawable/shape_text_grey_top"
        android:padding="@dimen/spacing_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_larger"
        android:text="@string/label_origin"
        android:drawablePadding="@dimen/spacing_smaller"
        android:drawableStart="@drawable/ic_my_location"
        android:fontFamily="@font/helvetica_neue_regular"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_huge"
        app:layout_constraintBottom_toTopOf="@+id/tvDestination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvErrorMessage"/>
    <TextView
        android:textSize="16sp"
        android:id="@+id/tvDestination"
        android:background="@drawable/shape_text_grey_bottom"
        android:padding="@dimen/spacing_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_destination"
        android:drawablePadding="@dimen/spacing_smaller"
        android:drawableStart="@drawable/ic_pointer_destination"
        android:fontFamily="@font/helvetica_neue_regular"
        app:layout_constraintEnd_toEndOf="@+id/tvOrigin"
        app:layout_constraintStart_toStartOf="@+id/tvOrigin"
        app:layout_constraintTop_toBottomOf="@+id/tvOrigin"/>
    <ImageView
        android:id="@+id/ivChangeWay"
        android:background="@drawable/shape_round_button"
        android:padding="@dimen/spacing_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_change_way"
        android:contentDescription="@string/accessibility_switch_orig_dest"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintBottom_toBottomOf="@+id/tvDestination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvOrigin"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintBottom_toTopOf="@+id/rvRoutes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDestination">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btAnyway"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_combined"
            android:lines="1"
            android:fontFamily="@font/helveticaneue_light"
            app:icon="@drawable/ic_combined"
            app:iconGravity="start"
            app:layout_constraintEnd_toStartOf="@+id/btBus"
            app:layout_constraintHorizontal_weight="1.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ToogleButtonTypeWay"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btBus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/label_bus"
            android:lines="1"
            android:fontFamily="@font/helveticaneue_light"
            app:icon="@drawable/ic_bus"
            app:iconGravity="start"
            app:layout_constraintBottom_toBottomOf="@+id/btAnyway"
            app:layout_constraintEnd_toStartOf="@+id/btTrain"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btAnyway"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ToogleButtonTypeWay"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btTrain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/label_train"
            android:lines="1"
            android:fontFamily="@font/helveticaneue_light"
            app:icon="@drawable/ic_train"
            app:iconGravity="start"
            app:layout_constraintBottom_toBottomOf="@+id/btAnyway"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btBus"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ToogleButtonTypeWay"/>
        <TextView
            android:id="@+id/tvSelectDate"
            android:paddingTop="@dimen/spacing_small"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/departure"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btAnyway"
            style="@style/TextViewDate"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/vSeparator"
        android:background="@drawable/drawable_separator_routes"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/spacing_tiny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clOptions"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRoutes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vSeparator"/>
    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        android:id="@+id/btCalculate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/calculate_route"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Button.ButtonYellow"/>
</androidx.constraintlayout.widget.ConstraintLayout>
